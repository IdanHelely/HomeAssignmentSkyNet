{
  "compilerOptions": {
    "jsx": "preserve",
    "target": "es5",
    "lib": ["es2020", "dom", "dom.iterable"],
    "baseUrl": "./src",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "paths": {
      "*": ["types/*"],
      "@/data/*": ["data/*"],
      "@/svg/*": ["libs/svgs/*"]
    }
  },
  "include": ["src/**/*.ts", "src/**/*.tsx"],
  "exclude": ["node_modules"]
}
